<h1><%= @task.name %></h1>
<p><%= @task.description %></p>
<p>Status: <%= @task.status %></p>
<p>Creator: <%= @task.creator %></p>
<p>Performer: <%= @task.performer %></p>
<p>Completed: <%= @task.completed %></p>
<small>Created: <i><%= @task.created_at.in_time_zone('Moscow').strftime("%H:%m %d.%m.%y") %></i></small>
<hr>

<%= link_to 'Back', root_path %>
<%= link_to 'Edit', edit_task_path(@task) %>
<%= link_to 'Destroy', task_path(@task), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
